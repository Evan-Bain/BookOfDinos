<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/evolution_transition"
        app:constraintSetEnd="@id/end_evolution"
        app:constraintSetStart="@id/start_evolution"
        app:duration="1000"
        app:layoutDuringTransition="honorRequest" />

    <ConstraintSet android:id="@+id/start_evolution">

        <Constraint
            android:id="@id/evolution_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/crazy_evolution_text_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/evolution_constraint_layout"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_evolution">

        <Constraint
            android:id="@id/evolution_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/crazy_evolution_text_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/evolution_constraint_layout" />

    </ConstraintSet>

</MotionScene>
