<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/filler_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[picture]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--Enters into main area of the app when clicked-->
    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/classicButton"
        android:text="Start Button"
        app:layout_constraintEnd_toEndOf="@+id/filler_text"
        app:layout_constraintStart_toStartOf="@+id/filler_text"
        app:layout_constraintTop_toBottomOf="@+id/filler_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>