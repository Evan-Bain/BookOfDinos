<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/select_background_wrapper_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionGroup="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/select_background_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/select_background_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        tools:context=".miscFragments.SelectBackgroundFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp"
            android:text="Default Background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/fredoka_one"
            android:text="Level 0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/default_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            android:focusable="true"
            android:elevation="8dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="164dp"
                android:layout_height="164dp"
                android:layout_gravity="center"
                android:src="@drawable/filler_square_icon" />

            <ImageView
                android:id="@+id/default_background_check"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:alpha="0"
                android:layout_gravity="center"
                android:src="@drawable/check_box_gray" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:text="Jungle Background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/fredoka_one"
            android:text="Level 1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/jungle_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_land"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/jungle_background_check"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:alpha="0"
                android:layout_gravity="center"
                android:src="@drawable/check_box_gray" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:text="Ocean Background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/fredoka_one"
            android:text="Level 2"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/ocean_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/background_water"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/ocean_background_check"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_gravity="center"
                android:alpha="0"
                android:src="@drawable/check_box_gray" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka_one"
            android:textColor="@color/secondaryColor"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:text="Sky Background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@color/primaryColor"
            android:fontFamily="@font/fredoka_one"
            android:text="Level 3"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/sky_background"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            android:focusable="true"
            android:clickable="true"
            android:elevation="8dp"
            android:layout_marginBottom="8dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/background_air"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/sky_background_check"
                android:layout_width="134dp"
                android:layout_height="134dp"
                android:layout_gravity="center"
                android:alpha="0"
                android:src="@drawable/check_box_gray" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        <Button
            android:id="@+id/select_background"
            style="@style/classicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:alpha="0"
            android:clickable="false"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="32dp"
            tools:alpha="1"
            android:text="@string/select" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>