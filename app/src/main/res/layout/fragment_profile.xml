<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_profile_layout"
        android:transitionGroup="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_image"
            app:srcCompat="@drawable/profile_icon"
            android:layout_width="125dp"
            android:layout_height="125dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/edit_profile_image_fab"
            android:transitionName="shared_element_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:fabSize="mini"
            app:layout_constraintTop_toTopOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/profile_image"/>

        <TextView
            android:id="@+id/experience_title"
            android:text="exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/profile_image"
            app:layout_constraintBottom_toTopOf="@id/experience_ratio"/>

        <TextView
            android:id="@+id/experience_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="156/400"
            app:layout_constraintBottom_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toEndOf="@id/profile_image"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_badges_recycler"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="130dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>